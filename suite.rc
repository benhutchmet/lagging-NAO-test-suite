[cylc]
    UTC mode = True # Ignore DST
    [[parameters]]
        model = all
        initial_year = 1961
        final_year = 2014
        variable = psl
        azores_region = azores
        iceland_region = iceland
        forecast_range = 2-9
        season = DJFM
        lag = 4

[scheduling]
    [[dependencies]]
        graph = """
        calc_anoms<model><variable><azores_region><iceland_region><forecast_range><season> => apply_lag<model><variable><azores_region><iceland_region><forecast_range><season><lag>
        apply_lag<model><variable><azores_region><iceland_region><forecast_range><season><lag> => calc_nao<model><variable><forecast_range><season><lag>
        calc_nao<model><variable><forecast_range><season><lag> => process_plot_nao<forecast_range><season>"""

[runtime]
    [[root]]
        # This is applied before every task
        pre-script="""set -eu"""
        [[[job]]]
            batch system = slurm
            execution time limit = PT10M
        [[[directives]]]
            --partition = short-serial
